<launch>
  
  <!-- Floating joints should be published as fixed -->
	<node pkg="robot_state_publisher" name="robot_state_publisher" type="robot_state_publisher" output="screen">
	  <param name="pub_float_as_fixed" value="true" />
	</node>
	<param name="robot_description" textfile="$(find robot_state_publisher)/test/two_links_floating_joint.urdf" />

	<test test-name="float_as_fixed" pkg="robot_state_publisher" type="test_floating_joint">
	  <param name="pub_float_as_fixed" value="true" />
	</test>

</launch>
